<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoomActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo sala"
        android:textSize="24sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="510dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:srcCompat="@drawable/ic_baseline_content_copy_50"
        tools:layout_editor_absoluteY="510dp" />

    <Switch
        android:id="@+id/confAleatoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações aleatórias"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="142dp" />

    <RadioGroup
        android:id="@+id/RadioGrup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="205dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Você vai jogar com:" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="O" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/RadioGrup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="291dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quem inicia o jogo:" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="O" />
    </RadioGroup>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar e entrar na sala"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="413dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="54dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_baseline_cached_24"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="591dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aguardando o Jogador"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="614dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="68dp" />

</androidx.constraintlayout.widget.ConstraintLayout>