<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jogodavelha.GameActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <com.example.jogodavelha.SquareMatrixView
        android:id="@+id/squareImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/tabuleiro_jogo_da_velha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tabuleiro_jogo_da_velha" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela11"
        android:transitionName="11"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:fillColor="#FF000000"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/squareImageView"
        app:layout_constraintVertical_bias="0.050000012"
        app:layout_constraintVertical_chainStyle="spread" />


    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela12"
        android:transitionName="12"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/squareImageView"
        app:layout_constraintVertical_bias="0.050000012" />

    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela13"
        android:transitionName="13"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toEndOf="@+id/squareImageView"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/squareImageView"
        app:layout_constraintVertical_bias="0.050000012" />

    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela21"
        android:transitionName="21"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/squareImageView" />

    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela22"
        android:transitionName="22"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/squareImageView" />

    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela23"
        android:transitionName="23"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toEndOf="@+id/squareImageView"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/squareImageView" />

    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela31"
        android:transitionName="31"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/squareImageView"
        app:layout_constraintVertical_bias="0.95" />

    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela32"
        android:transitionName="32"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/squareImageView"
        app:layout_constraintVertical_bias="0.95" />

    <com.example.jogodavelha.SquareXorOView
        android:id="@+id/tabela33"
        android:transitionName="33"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="7dp"
        android:background="@drawable/vazio"
        android:onClick="insertXO"
        app:layout_constraintBottom_toBottomOf="@+id/squareImageView"
        app:layout_constraintEnd_toEndOf="@+id/squareImageView"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/squareImageView"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="restartGame"
        android:text="@string/nome_botao1"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/squareImageView" />

    <TextView
        android:id="@+id/textVezDoJogador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@+id/squareImageView"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.36" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.632" />

</androidx.constraintlayout.widget.ConstraintLayout>